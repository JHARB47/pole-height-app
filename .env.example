############################################################
# Local Development Environment Template
# Copy to `.env` and adjust values as needed.
############################################################

# Prevents Netlifyâ€™s Next.js plugin from running in `netlify dev`
NETLIFY_NEXT_PLUGIN_SKIP=true

############################################################
# Database Connection (Neon/Postgres)
############################################################

# DATABASE_URL="postgresql://<user>:<password>@<endpoint_hostname>/<dbname>?sslmode=require"
DATABASE_URL=""

# Optional Netlify-provided Neon variables (set in production)
# NETLIFY_DATABASE_URL=
# NETLIFY_DATABASE_URL_UNPOOLED=

############################################################
# Vite Application Settings (exposed via import.meta.env)
############################################################

VITE_APP_NAME="Pole Height Calculator"
VITE_APP_VERSION="1.0.0"
VITE_BUILD_TARGET="production"
VITE_DEBUG_MODE="false"

# Optional API configuration
# VITE_API_BASE_URL="https://api.example.com"

############################################################
# Feature Flags
############################################################

VITE_ENABLE_GEOSPATIAL_IMPORT="true"
VITE_ENABLE_HELP_SYSTEM="true"
VITE_ENABLE_FORMAT_PREFERENCES="true"
# Set to "false" to disable the service worker; defaults to enabled in production when unset.
VITE_ENABLE_SW="true"

############################################################
# Monitoring and Metrics
############################################################

ENABLE_METRICS=true
METRICS_PORT=9090
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

############################################################
# GitHub OAuth Configuration
############################################################

# GitHub App ID (from GitHub App settings)
GITHUB_APP_ID=2081234

# GitHub OAuth Client ID (from GitHub App OAuth settings)
GITHUB_CLIENT_ID=Iv23liItM1R8qgZPwcAh

# GitHub OAuth Client Secret (set in production environment only)
# GITHUB_CLIENT_SECRET=your-github-client-secret-here

# GitHub App Private Key (for server-to-server authentication)
# GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# GitHub Webhook Secret (for webhook verification)
# GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

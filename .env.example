# Copy to .env for local development
# This flag prevents the Netlify Next.js plugin from activating in `netlify dev`
NETLIFY_NEXT_PLUGIN_SKIP=true

# Database connection for local function testing (Neon/Postgres)
# DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require

# Optional: Netlify-provided Neon variables (used on deploy)
# NETLIFY_DATABASE_URL=
# NETLIFY_DATABASE_URL_UNPOOLED=
# Environment variables for local development

# Postgres connection string (Neon)
# Format:
# DATABASE_URL="postgresql://<user>:<password>@<endpoint_hostname>/<dbname>?sslmode=require"
# Example:
# DATABASE_URL="postgresql://neondb_owner:password@ep-foo-bar.us-east-1.aws.neon.tech/neondb?sslmode=require"

DATABASE_URL=""# Copy this file to .env (local only) and fill in values
# Vite exposes vars prefixed with VITE_

# Application Configuration
VITE_APP_NAME="Pole Height Calculator"
VITE_APP_VERSION="1.0.0"

# Build Configuration (for development)
VITE_BUILD_TARGET="production"
VITE_DEBUG_MODE="false"

# API Configuration (if needed in future)
# VITE_API_BASE_URL="https://api.example.com"

# Feature Flags
VITE_ENABLE_GEOSPATIAL_IMPORT="true"
VITE_ENABLE_HELP_SYSTEM="true"
VITE_ENABLE_FORMAT_PREFERENCES="true"

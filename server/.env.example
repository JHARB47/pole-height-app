# PolePlan Pro Enterprise Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/poleplan_pro
DATABASE_SSL=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Azure AD OAuth (Optional)
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# SAML Configuration (Optional)
SAML_ENTRY_POINT=https://your-saml-provider.com/sso
SAML_ISSUER=poleplanpro.com
SAML_CALLBACK_URL=https://api.poleplanpro.com/auth/saml/callback
SAML_CERT=-----BEGIN CERTIFICATE-----...-----END CERTIFICATE-----

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
HELMET_CSP_ENABLED=true
CORS_ORIGIN=http://localhost:3000,https://poleplanpro.com

# Feature Flags
ENABLE_API_KEYS=true
ENABLE_SSO=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true

# External Services
OPENSTREETMAP_TILE_URL=https://tile.openstreetmap.org/{z}/{x}/{y}.png
UNPKG_CDN_URL=https://unpkg.com

# Development Only
DEV_SEED_DATABASE=false
DEV_AUTO_LOGIN=false